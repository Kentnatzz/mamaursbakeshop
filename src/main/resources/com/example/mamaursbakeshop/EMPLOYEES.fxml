<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mamaursbakeshop.EmployeesController"
            prefHeight="400.0" prefWidth="820.0" style="-fx-background-color: beige;">

   <children>
      <VBox layoutX="20" layoutY="20" prefWidth="780" spacing="15">

         <HBox alignment="CENTER">
            <Label text="LIST OF EMPLOYEES">
               <font>
                  <Font size="22.0"/>
               </font>
            </Label>
         </HBox>

         <TableView fx:id="employeeTable" prefHeight="270" prefWidth="780" editable="true">

            <columns>
               <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
               <TableColumn fx:id="nameColumn" text="Name" prefWidth="140"/>
               <TableColumn fx:id="positionColumn" text="Position" prefWidth="140"/>
               <TableColumn fx:id="shiftColumn" text="Shift" prefWidth="120"/>
               <TableColumn fx:id="emailColumn" text="Email" prefWidth="220"/>
               <TableColumn fx:id="rateColumn" text="Rate" prefWidth="80"/>
            </columns>

         </TableView>

         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="updateSalaryButton" text="Update Salary" style="-fx-text-fill: white; -fx-background-color: #A0522D;"/>
            <Button fx:id="backButton" text="Back" style="-fx-background-color: #A0522D; -fx-text-fill: white;"/>
         </HBox>

      </VBox>
   </children>

</AnchorPane>
