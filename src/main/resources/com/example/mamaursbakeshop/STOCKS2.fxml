<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="533.0" prefWidth="634.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mamaursbakeshop.StocksController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefWidth="590.0" spacing="20.0">

            <!-- Title -->
            <HBox alignment="CENTER">
                <Label text="BREAD SALES INVENTORY">
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
            </HBox>


            <TableView fx:id="breadSalesTable" prefHeight="350.0" prefWidth="580.0">
                <columns>
                    <TableColumn fx:id="breadTypeColumn" prefWidth="180" text="Bread Type" />
                    <TableColumn fx:id="quantitySoldColumn" prefWidth="100" text="Quantity Sold" />
                    <TableColumn fx:id="salesDateColumn" prefWidth="160" text="Date Sold" />
                </columns>
            </TableView>


            <HBox alignment="CENTER" spacing="15.0">
                <Label text="Bread Type: " />
                <TextField fx:id="breadTypeInput" promptText="Enter bread type" />
                <Label text="Quantity Sold: " />
                <TextField fx:id="quantitySoldInput" promptText="Enter quantity sold" />
                <Label text="Date Sold: " />
                <TextField fx:id="salesDateInput" promptText="Enter date sold" />
            </HBox>


            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#handleAddSale" style="-fx-background-color: #A0522D; -fx-text-fill: White;" text="Add Sale" />
                <Button onAction="#handleDeleteSale" style="-fx-background-color: #A0522D; -fx-text-fill: White;" text="Delete Sale" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
