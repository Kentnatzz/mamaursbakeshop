<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="560.0" prefWidth="820.0" style="-fx-background-color: linear-gradient(to bottom right, #fff8e1, #ffe0b2);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mamaursbakeshop.EmployeesController">

   <children>
      <VBox layoutX="20" layoutY="20" prefHeight="518.0" prefWidth="780" spacing="15">

         <HBox alignment="CENTER">
            <Label text="LIST OF EMPLOYEES">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </HBox>

         <TableView fx:id="employeeTable" editable="true" prefHeight="414.0" prefWidth="780">

            <columns>
               <TableColumn fx:id="idColumn" prefWidth="80" text="ID" />
               <TableColumn fx:id="nameColumn" prefWidth="140" text="Name" />
               <TableColumn fx:id="positionColumn" prefWidth="140" text="Position" />
               <TableColumn fx:id="shiftColumn" prefWidth="120" text="Shift" />
               <TableColumn fx:id="emailColumn" prefWidth="220" text="Email" />
               <TableColumn fx:id="rateColumn" prefWidth="80" text="Rate" />
            </columns>

         </TableView>

         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="updateSalaryButton" style="-fx-text-fill: white; -fx-background-color: #A0522D;" text="Update Salary" />
            <Button fx:id="backButton" style="-fx-background-color: #A0522D; -fx-text-fill: white;" text="Back" />
         </HBox>

      </VBox>
   </children>

</AnchorPane>
