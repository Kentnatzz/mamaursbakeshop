<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mamaursbakeshop.SuppliersController">


    <VBox alignment="CENTER" layoutX="98.0" layoutY="30.0" prefHeight="500.0" prefWidth="620.0" spacing="20">

        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Supplier Information" />


        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="supplierNameField" promptText="Enter Supplier Name" />
            <TextField fx:id="supplierAddressField" promptText="Enter Supplier Address" />
        </HBox>


        <ListView fx:id="supplierListView" prefHeight="319.0" prefWidth="444.0" />


        <Button onAction="#handleAddSupplier" style="-fx-background-color: #8B4513; -fx-text-fill: white;" text="Add Supplier" />
   
   
       <Button onAction="#handleBack" style="-fx-background-color: #A0522D; -fx-text-fill: white;" text="Back" />
    </VBox>
</AnchorPane>
